		{
			"name": "03 - Login Alice",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"",
							"pm.test(\"Login success\", function () {",
							"  pm.response.to.have.status(200);",
							"  var data = pm.response.json();",
							"  pm.environment.set(\"token_alice\", data.token);",
							"  if (data.user && data.user.id) { pm.environment.set(\"alice_id\", data.user.id); }",
							"});"
						]
					}
				}
			],
			"request": {
